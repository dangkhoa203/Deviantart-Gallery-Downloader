<mah:MetroWindow    x:Class="DeviantartDownloader.Views.KeySettingView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:DeviantartDownloader.Views"
                    xmlns:vm="clr-namespace:DeviantartDownloader.ViewModels" 
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    d:DataContext="{d:DesignInstance Type=vm:KeySettingViewModel}"
                    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                    mc:Ignorable="d"
                    Title="Key Setting" Height="370" Width="800"
                    ResizeMode="NoResize" ShowIconOnTitleBar="False"
                    WindowStartupLocation="CenterScreen" WindowTitleBrush="#06070d"
                    Background="#d4dfd0" BorderBrush="Black"
                    Dialog:DialogParticipation.Register="{Binding}">
    <Grid RowDefinitions="65,120,30,30,*">
        <Grid Grid.Row="0" 
              Margin="20,10,20,0">
            <Grid ColumnDefinitions="65,*,200">
                <TextBlock Grid.Column="0" 
                           VerticalAlignment="Center"
                           FontSize="20" Text="Status: "/>
                <TextBlock Grid.Column="1"
                           Text="{Binding Status}" Foreground="{Binding TileBrush}"
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           FontSize="20" />
                <Button Grid.Column="2" 
                        Command="{Binding DeleteUserKeyCommand}"
                        BorderBrush="#93a98f"
                        BorderThickness="2"
                        HorizontalAlignment="Right" Height="50" 
                        Width="150" Cursor="Hand"
                        Margin="0,0,5,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Delete user key" 
                                   Foreground="Red"
                                   Margin="0,0,8,0" 
                                   VerticalAlignment="Center"/>
                        <iconPacks:PackIconFontAwesome Kind="CircleMinusSolid"  
                                                       Foreground="Red" 
                                                       VerticalAlignment="Center" />        
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,200">
            <StackPanel Grid.Column="0" 
                        Margin="20,0,20,0"  >
                <Label  Target="{Binding ElementName=txtContent}" 
                        Content="Code:"  />
                <TextBox mah:ControlsHelper.FocusBorderBrush="#93a98f"
                         mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                         mah:ControlsHelper.CornerRadius="4"
                         IsReadOnly="{Binding IsLoading}"  
                         Text="{Binding Code,UpdateSourceTrigger=PropertyChanged}" 
                         Name="txtContent" 
                         BorderBrush="#93a98f"
                         Foreground="#337287"
                         Background="#e9f0e6" FontWeight="DemiBold" FontStretch="ExtraExpanded"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         TextWrapping="Wrap" Height="80" 
                         FontSize="18" Margin="0,0,0,0"/>
            </StackPanel>
            <Button Grid.Column="1"
                    mah:ControlsHelper.CornerRadius="2"
                    mah:ControlsHelper.ContentCharacterCasing="Normal"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    Command="{Binding ToAuthorizeCommand}"
                    BorderBrush="#93a98f"
                    BorderThickness="2"
                    Height="50" Width="150"
                    FontSize="16"
                    Cursor="Hand" Content="Get code"/>
        </Grid>
        <Grid Grid.Row="2" 
              Margin="20,0,20,10">
            <TextBlock FontSize="14" 
                       Text="*By using user key, you can download higher resolution image"/>
        </Grid>
        <Grid Grid.Row="3" 
              Margin="0,0,0,0">
            <mah:MetroProgressBar Background="#d4dfd0" IsIndeterminate="{Binding IsLoading}"/>
        </Grid>
        <Grid Grid.Row="4" 
              Margin="20,20,20,0">
            <Button mah:ControlsHelper.CornerRadius="2"
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding AuthorizeCommand}"
                    BorderBrush="#93a98f" BorderThickness="2"
                    FontSize="20" Cursor="Hand"
                    Height="50"  VerticalAlignment="Top"  
                    Content="Authorize code"/>
        </Grid>
    </Grid>
</mah:MetroWindow>
