<mah:MetroWindow    x:Class="DeviantartDownloader.Views.SettingView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:DeviantartDownloader.Views"
                    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                    xmlns:vm="clr-namespace:DeviantartDownloader.ViewModels" 
                    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    d:DataContext="{d:DesignInstance Type=vm:SettingViewModel}"
                    mc:Ignorable="d"
                    Title="Setting" Height="650"  ResizeMode="NoResize" Width="800" 
                    ShowIconOnTitleBar="False"
                    WindowStartupLocation="CenterScreen" WindowTitleBrush="#06070d"
                    Background="#d4dfd0" BorderBrush="Black"
                    Dialog:DialogParticipation.Register="{Binding}">
    <Grid RowDefinitions="275,35,160,80,60">
        <Grid Grid.Row="0">
            <StackPanel Grid.Column="0" 
                        Margin="20,0,20,0"  >
                <Label Target="{Binding ElementName=txtContent}" 
                       Content="Header string:"  />
                <TextBox mah:ControlsHelper.FocusBorderBrush="#93a98f"
                         mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                         mah:ControlsHelper.CornerRadius="4"
                         Text="{Binding HeaderString,UpdateSourceTrigger=PropertyChanged}" 
                         Name="txtContent"
                         BorderBrush="#93a98f"
                         Foreground="#337287" FontWeight="DemiBold"
                         Background="#e9f0e6" FontStretch="ExtraExpanded"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         TextWrapping="Wrap"
                         Height="225" FontSize="18" Margin="0,0,0,0"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" 
              Margin="20,0,20,0"
              ColumnDefinitions="70,50,*">
            <TextBlock Grid.Column="0" 
                       VerticalAlignment="Center" 
                       Text="Queue limit:"/>
            <TextBox Grid.Column="1"
                     mah:ControlsHelper.FocusBorderBrush="#93a98f"
                     mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                     mah:ControlsHelper.CornerRadius="4"
                     Text="{Binding QueueLimit,UpdateSourceTrigger=PropertyChanged}" 
                     MaxLength="1"
                     BorderBrush="#93a98f"
                     Foreground="#337287"
                     Background="#e9f0e6"
                     Width="40" Height="30" FontWeight="Bold"
                     FontSize="16" TextAlignment="Center"
                     HorizontalAlignment="Left" VerticalAlignment="Top" 
                     PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" />
            <TextBlock Grid.Column="2" 
                       VerticalAlignment="Center" Margin="0,0,0,0"
                       Text="Concurrent download"/>
        </Grid>
        <Grid Grid.Row="2"
              RowDefinitions="50,35,35,35"
              Margin="20,0,20,0">
            <StackPanel  Grid.Row="0" Orientation="Horizontal">
                <TextBlock Margin="0,0,0,10" FontSize="30" FontWeight="Bold">
                    User key
                </TextBlock>
                <Button Command="{Binding UserKeyInfoCommand}"
                        Style="{DynamicResource MahApps.Styles.Button.Circle}" 
                        Background="#337287" BorderBrush="#2b3635" 
                        Cursor="Hand" Width="25" Height="25" 
                        Margin="10,0,0,0" >
                    <iconPacks:PackIconFontAwesome Kind="InfoSolid" 
                                                       Foreground="White"  
                                                       VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
            
            <Grid Grid.Row="1" 
                  Margin="0,0,20,0"
                  ColumnDefinitions="190,50,*">
                <TextBlock Grid.Column="0" 
               VerticalAlignment="Center" 
               Text="Search folder request wait time:"/>
                <TextBox Grid.Column="1"
             mah:ControlsHelper.FocusBorderBrush="#93a98f"
             mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
             mah:ControlsHelper.CornerRadius="4"
             Text="{Binding FolderSearchWaitTime,UpdateSourceTrigger=PropertyChanged}" 
             MaxLength="1"
             BorderBrush="#93a98f"
             Foreground="#337287"
             Background="#e9f0e6"
             Width="40" Height="30" FontWeight="Bold"
             FontSize="16" TextAlignment="Center"
             HorizontalAlignment="Left" VerticalAlignment="Top" 
             PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" />
                <TextBlock Grid.Column="2" 
               VerticalAlignment="Center" Margin="0,0,0,0"
               Text="Second"/>
            </Grid>
            <Grid Grid.Row="2" 
      Margin="0,0,20,0"
      ColumnDefinitions="190,50,*">
                <TextBlock Grid.Column="0" 
   VerticalAlignment="Center" 
   Text="Search deviant request wait time:"/>
                <TextBox Grid.Column="1"
 mah:ControlsHelper.FocusBorderBrush="#93a98f"
 mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
 mah:ControlsHelper.CornerRadius="4"
 Text="{Binding DeviantSearchWaitTime,UpdateSourceTrigger=PropertyChanged}" 
 MaxLength="1"
 BorderBrush="#93a98f"
 Foreground="#337287"
 Background="#e9f0e6"
 Width="40" Height="30" FontWeight="Bold"
 FontSize="16" TextAlignment="Center"
 HorizontalAlignment="Left" VerticalAlignment="Top" 
 PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" />
                <TextBlock Grid.Column="2" 
   VerticalAlignment="Center" Margin="0,0,0,0"
   Text="Second"/>
            </Grid>
            <Grid Grid.Row="3" 
      Margin="0,0,20,0"
      ColumnDefinitions="190,50,*">
                <TextBlock Grid.Column="0" 
   VerticalAlignment="Center" 
   Text="Download original image wait time:"/>
                <TextBox Grid.Column="1"
 mah:ControlsHelper.FocusBorderBrush="#93a98f"
 mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
 mah:ControlsHelper.CornerRadius="4"
 Text="{Binding DeviantDownloadWaitTime,UpdateSourceTrigger=PropertyChanged}" 
 MaxLength="1"
 BorderBrush="#93a98f"
 Foreground="#337287"
 Background="#e9f0e6"
 Width="40" Height="30" FontWeight="Bold"
 FontSize="16" TextAlignment="Center"
 HorizontalAlignment="Left" VerticalAlignment="Top" 
 PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" />
                <TextBlock Grid.Column="2" 
   VerticalAlignment="Center" Margin="0,0,0,0"
   Text="Second"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="3"
              RowDefinitions="50,*"
              Margin="20,0,20,0">
            <StackPanel  Grid.Row="0" Orientation="Horizontal">
                <TextBlock Margin="0,0,0,10" FontSize="30" FontWeight="Bold">
                    Image Description
                </TextBlock>
                <Button Command="{Binding DescriptionInfoCommand}" Background="#337287" BorderBrush="#2b3635" Cursor="Hand" Width="25" Height="25" Margin="10,0,0,0" Style="{DynamicResource MahApps.Styles.Button.Circle}">
                    <iconPacks:PackIconFontAwesome Kind="InfoSolid" 
                                           Foreground="White"  
                                           />
                </Button>
            </StackPanel>
            <Grid Grid.Row="1"
                  ColumnDefinitions="200,*">
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding DownloadDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Content="Download image description" 
                              FlowDirection="LeftToRight"
                              Margin="5,0,0,0" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding DescriptionOnly, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              IsEnabled="{Binding DownloadDescription}"
                              Content="Only download image description"
                              FlowDirection="LeftToRight"
                              Margin="5,0,0,0" />
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="4" 
              Margin="10,10,10,10">
            <Button mah:ControlsHelper.CornerRadius="2"
                    mah:ControlsHelper.ContentCharacterCasing="Upper"
                    mah:ControlsHelper.FocusBorderBrush="#93a98f"
                    mah:ControlsHelper.MouseOverBorderBrush="#93a98f"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding SaveCommand}"
                    BorderBrush="#93a98f" BorderThickness="2"
                    FontSize="20" Cursor="Hand"
                    Content="Save"/>
        </Grid>
    </Grid>
</mah:MetroWindow>
